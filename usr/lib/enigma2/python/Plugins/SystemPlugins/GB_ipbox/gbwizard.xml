<wizard>	
		<step id="start">
			<text value="Do you want to do a GB server scan?" />
			<list>
				<listentry caption="No" step="end" />
				<listentry caption="Yes, do an automatic scan server IP" step="scan" />
				<listentry caption="Yes, do a manual insert server IP" step="manualip" />
			</list>
		</step>
		<step id="scan" nextstep="end">
			<text value="Choose GigaBlue server!" />
			<displaytext value="Select server" />
			<config screen="GBremote" module="GBremote" type="ConfigList" />
			<code>
self.clearSelectedKeys()
self.selectKey("LEFT")
self.selectKey("RIGHT")
self.selectKey("OK")
			</code>			
		</step>
		<step id="manualip">
			<code>
self.hideRc()
			</code>
			<code pos="after">
self.mback = self.back
			</code>			
			<text value="Insert GigaBlue server IP adress?"/>
			<config screen="GBipserver" module="GBremote" type="ConfigList" />				
		</step>		
		<step id="end" laststep="true">
			<text value="Thank you for using the wizard. Your receiver is now ready for use.\nPress OK to start using your receiver." />
			<code>
self.clearSelectedKeys()
self.selectKey("OK")
			</code>
		</step>
</wizard>
